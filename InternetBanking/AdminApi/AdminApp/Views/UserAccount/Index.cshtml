@model AdminApp.AutoGeneratedModel.Customer
@{ 
    ViewData["Title"] = "User account";
}

<h2>Enter customer ID to block.</h2>
<p>Account will be automatically unblocked after 1 minute.</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <input asp-for="CustomerId" class="form-control">
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
