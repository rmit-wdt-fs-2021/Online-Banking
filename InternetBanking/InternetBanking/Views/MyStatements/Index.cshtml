@model Account
@{
    ViewData["Title"] = "Statements";
    var account = (Account)ViewBag.Account;
}

<h2>Select an account type to see transactions.</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="IndexToViewTransaction">
            <label asp-for="AccountType"></label>
            @Html.DropDownListFor(m => m.AccountType,
            new SelectList(Enum.GetValues(typeof(AccountType))),
            "Select type")

            <div class="form-group">
                <input type="submit" value="View Statement" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
